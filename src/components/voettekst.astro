---
import GitHubLogo from "../../assets/GitHub-Mark-120px-plus.png";
import "@geensnor/tokens";
import "@fontsource-variable/work-sans";

type Props = {
  githubURL: string;
};

const { githubURL } = Astro.props as Props;
---

<footer>
  <div>
    <a href="https://www.geensnor.nl">geensnor.nl</a>
  </div>
  <div>
    <a href={githubURL}><img alt="GitHub Logo" src={GitHubLogo.src} /></a>
  </div>
</footer>

<style>
  footer {
    font-family: var(--geensnor-font-family);
    background-color: var(--geensnor-grijs-10);

    border-top-color: var(--geensnor-grijs-50);
    border-top-style: solid;
    border-top-width: 1px;

    width: 100%;
    height: 60px;

    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  div {
    margin: 10px;
  }

  img {
    height: 30px;
  }
</style>
